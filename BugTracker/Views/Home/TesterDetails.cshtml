@model BugTracker.Model.Database.Bug


<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="card border-success">
            <div class="card-header">
                <div class="card-title">
                    <p>
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-bug-fill" viewBox="0 0 16 16">
                            <path d="M4.978.855a.5.5 0 1 0-.956.29l.41 1.352A4.985 4.985 0 0 0 3 6h10a4.985 4.985 0 0 0-1.432-3.503l.41-1.352a.5.5 0 1 0-.956-.29l-.291.956A4.978 4.978 0 0 0 8 1a4.979 4.979 0 0 0-2.731.811l-.29-.956z" />
                            <path d="M13 6v1H8.5v8.975A5 5 0 0 0 13 11h.5a.5.5 0 0 1 .5.5v.5a.5.5 0 1 0 1 0v-.5a1.5 1.5 0 0 0-1.5-1.5H13V9h1.5a.5.5 0 0 0 0-1H13V7h.5A1.5 1.5 0 0 0 15 5.5V5a.5.5 0 0 0-1 0v.5a.5.5 0 0 1-.5.5H13zm-5.5 9.975V7H3V6h-.5a.5.5 0 0 1-.5-.5V5a.5.5 0 0 0-1 0v.5A1.5 1.5 0 0 0 2.5 7H3v1H1.5a.5.5 0 0 0 0 1H3v1h-.5A1.5 1.5 0 0 0 1 11.5v.5a.5.5 0 1 0 1 0v-.5a.5.5 0 0 1 .5-.5H3a5 5 0 0 0 4.5 4.975z" />
                        </svg>

                        <span class="pull-right">
                            <a class="text-dark" asp-action="TesterBugList" asp-controller="Home">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-list-ul" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M5 11.5a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5zm-3 1a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm0 4a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm0 4a1 1 0 1 0 0-2 1 1 0 0 0 0 2z" />
                                </svg>
                            </a>
                            &nbsp;
                            <a class="text-dark" asp-action="TesterEdit" asp-controller="Home" asp-route-id="@Model.BugId">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pen" viewBox="0 0 16 16">
                                    <path d="M13.498.795l.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001zm-.644.766a.5.5 0 0 0-.707 0L1.95 11.756l-.764 3.057 3.057-.764L14.44 3.854a.5.5 0 0 0 0-.708l-1.585-1.585z" />
                                </svg>
                            </a>
                        </span>
                    </p>
                    <h3 class="text-success">Titel: @Html.DisplayFor(model => model.Titel)</h3>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Verantwortlicher Tester:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.MitarbeiterTest.Vorname) @Html.DisplayFor(model => model.MitarbeiterTest.Nachname)</dd>
                    <dt class="col-sm-4">Anlagedatum:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Anlagedatum)</dd>
                    <dt class="col-sm-4">Projekt:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Projekt.Projektname)</dd>
                    <dd class="col-sm-8 offset-sm-4"></dd>
                    <dd class="col-sm-8 offset-sm-4"></dd>
                    <dt class="col-sm-4">Beschreibung:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Beschreibung)</dd>

                </dl>
            </div>
            <!-- /.card-body -->
            <div class="card-footer text-muted">
                <dl class="row">
                    <dt class="col-sm-4">Zugewiesener Entwickler:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.MitarbeiterDev.Vorname) @Html.DisplayFor(model => model.MitarbeiterDev.Nachname)</dd>
                </dl>
            </div>
        </div>
        <!-- /.card -->
    </div>
</div>
