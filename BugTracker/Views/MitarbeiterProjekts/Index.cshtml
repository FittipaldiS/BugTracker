@model IEnumerable<BugTracker.Model.Database.MitarbeiterProjekt>

@{
    ViewData["Title"] = "Index";
}

@{
    Layout = "/Views/Admin/_Layout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Dashboard</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="MitarbeiterProjekts">Organisation</a></li>
                        <li class="breadcrumb-item active">Verwalten</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <!-- Main row -->
            <div class="row">
                <!-- Left col -->
                <!-- Card Mitarbeiterliste-->
                <div class="card" style="width: 100%">
                    <div class="card-header">
                        <h3 class="card-title">
                            Mitarbeiterlsite / Verwalten
                            <a asp-action="Create">
                                <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="currentColor" class="bi bi-file-plus" viewBox="0 0 16 16">
                                    <path d="M8.5 6a.5.5 0 0 0-1 0v1.5H6a.5.5 0 0 0 0 1h1.5V10a.5.5 0 0 0 1 0V8.5H10a.5.5 0 0 0 0-1H8.5V6z" />
                                    <path d="M2 2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2zm10-1H4a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1z" />
                                </svg>
                            </a>
                        </h3>
                        <div class="card-tools">
                            <div class="input-group input-group-sm">
                                <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body table-responsive p-0" style="height: 800px;">
                        <table class="table table-head-fixed text-nowrap">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Vorname</th>
                                    <th>Nachname</th>
                                    <th>Projekt</th>
                                    <th>Verwalten</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.MitarbeiterId</td>
                                        <td>@item.Mitarbeiter.Vorname</td>
                                        <td>@item.Mitarbeiter.Nachname</td>
                                        <td>[id: #@item.Projekt.ProjektId] @item.Projekt.Projektname</td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.MitarbeiterProjektId"><img src="~/img/EditIcon.jpg" /></a> |
                                            <a asp-action="Details" asp-route-id="@item.MitarbeiterProjektId"><img src="~/img/DetailIcon.jpg" /></a> |
                                            <a asp-action="Delete" asp-route-id="@item.MitarbeiterProjektId"><img src="~/img/DeleteIcon.jpg" /></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card Mitarbeiterliste -->
            </div>
        </div>
    </section>
    <!-- right col -->
</div>
<!-- /.row (main row) -->