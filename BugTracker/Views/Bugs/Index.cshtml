                        <div class="padding"></div>
                        <div class="row">
                            @foreach (var item in Model)
                            {
                                <!-- BEGIN TICKET CONTENT -->
                                <div class="col-md-12">
                                    <ul class="list-group fa-padding">
                                        <li class="list-group-item" data-toggle="modal" data-target="#issue">
                                            <div class="media">
                                                <i class="fa fa-cog pull-left"></i>
                                                <div class="media-body">
                                                    <strong><a asp-action="Details" asp-route-id="@item.BugId">@item.Titel</a></strong>
                                                    <span class="number pull-right"># @item.BugId</span>
                                                    <p class="info">
                                                        Opened by
                                                        <a asp-action="BugsMaDetails"
                                                           asp-controller="Bugs"
                                                           asp-route-id="@item.MitarbeiterTestId">@item.MitarbeiterTest.Vorname @item.MitarbeiterTest.Nachname</a>
                                                        @item.Anlagedatum
                                                        <div class="pull-right">
                                                            <a asp-action="Edit"
                                                               asp-route-id="@item.BugId">Edit</a> |
                                                            <a asp-action="Delete"
                                                               asp-route-id="@item.BugId">Delete</a>
                                                        </div>
                                                    </p>

                                                </div>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                                <!-- END TICKET CONTENT -->
                            }
                        </div>
                    </div>
                </div>
            </div>
            <!-- END TICKET -->
        </div>
    </section>
</div>
